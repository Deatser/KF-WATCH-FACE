{
	"name": "krekfree-shop",
	"version": "1.0.0",
	"description": "Магазин циферблатов KREK_FREE с интеграцией Robokassa",
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"dev": "nodemon server.js",
		"install-python-deps": "python3 -m pip install --user -r requirements.txt",
		"setup": "bash setup-python.sh"
	},
	"dependencies": {
		"compression": "^1.8.1",
		"cors": "^2.8.5",
		"express": "^4.18.2",
		"helmet": "^7.0.0",
		"multer": "^1.4.5-lts.1",
		"node-robokassa": "^0.0.0",
		"robokassa": "^0.0.4"
	},
	"devDependencies": {
		"nodemon": "^3.0.1"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"render": {
		"buildCommand": "bash setup-python.sh && npm install",
		"startCommand": "node server.js"
	}
}
